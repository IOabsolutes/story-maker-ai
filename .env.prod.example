# Django Production Settings
# IMPORTANT: Generate a new secret key for production!
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-me-generate-a-secure-secret-key

# CRITICAL: Set to 0 in production!
DEBUG=0

# Add your domain(s) here
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Configuration
# IMPORTANT: Use strong passwords in production!
POSTGRES_DB=story_generator
POSTGRES_USER=story_user
POSTGRES_PASSWORD=change-me-use-strong-password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Celery Configuration
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672/
CELERY_RESULT_BACKEND=django-db

# Ollama Configuration
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama3.2:3b

# Application Settings
DEFAULT_MAX_CHAPTERS=10
CHAPTER_GENERATION_TIMEOUT=120

# Optional: Sentry Error Tracking
# SENTRY_DSN=https://your-sentry-dsn

