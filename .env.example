# =============================================================================
# Environment Selection
# =============================================================================
# Set to "production" for production environment
# Default: development
DJANGO_ENV=development

# =============================================================================
# Django Core
# =============================================================================
# REQUIRED in production: Generate with `python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"`
SECRET_KEY=change-me-in-production-use-secrets-generator

# Set to 1 for development only
DEBUG=1

# Comma-separated list of allowed hosts
# Production example: ALLOWED_HOSTS=example.com,www.example.com
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Database
# =============================================================================
POSTGRES_DB=story_generator
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Alternative: Full DATABASE_URL (not used by default, but supported)
# DATABASE_URL=postgres://postgres:postgres@db:5432/story_generator

# =============================================================================
# Celery
# =============================================================================
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672/
CELERY_RESULT_BACKEND=django-db

# =============================================================================
# Ollama (AI Backend)
# =============================================================================
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL=llama3.2:3b

# =============================================================================
# Application Settings
# =============================================================================
DEFAULT_MAX_CHAPTERS=10
CHAPTER_GENERATION_TIMEOUT=120
